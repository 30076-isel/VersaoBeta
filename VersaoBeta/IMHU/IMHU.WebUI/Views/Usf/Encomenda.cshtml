@model IMHU.Domain.Encomenda_USF

@{
    ViewBag.Title = "Encomenda";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<h2>Encomenda</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Encomenda</legend>

        <div class="form-group">
            @Html.ValidationMessageFor(m => m.id_Encomenda)
            @Html.TextBoxFor(m => m.id_Encomenda, new { placeholder = "id_Encomenda", @class = "form-control" })
        </div>
                <div class="form-group">
            @Html.ValidationMessageFor(m => m.id_Funcionario)
            @Html.TextBoxFor(m => m.id_Funcionario, new { placeholder = "id_Funcionario", @class = "form-control" })
        </div>

                <div class="form-group">
            @Html.ValidationMessageFor(m => m.quantidadeEncomenda)
            @Html.TextBoxFor(m => m.quantidadeEncomenda, new { placeholder = "quantidadeEncomenda", @class = "form-control" })
        </div>


       <div class="form-group">
            @Html.ValidationMessageFor(m => m.dataEncomenda)
            @Html.TextBoxFor(m => m.dataEncomenda, new { placeholder = "dataEncomenda", @class = "form-control" })
        </div>

        <div class="form-group">
            <select id="disabledSelect" class="form-control">
                <option>Product 1</option>
                <option>Product 2</option>
                <option>Product 3</option>
            </select>
        </div>

        <p>
            <input type="submit" class="btn btn-success" value="Enviar Pedido" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink(" Back  to  List ", "Index", null, new { @class="btn btn-primary" })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
